<script type="text/javascript">
            $(function () {
                $('form').submit(function () {
                    if ($(this).valid()) {
                        $.ajax({
                            url: "/Home/AddPut",
                            type: "PUT",
                            data: $(this).serialize(),
                            success: function (result) {
                                $('#result').html(result);
                            }
                        });
                    }
                    return false;
                });
            });
